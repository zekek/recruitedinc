/ Header and Nav
.row
  .large-3.columns
    %h1
      =link_to image_tag("http://placehold.it/400x100&text=Logo"), root_path
  .large-9.columns
    %ul.button-group.right
      - if user_signed_in?
        %li
          %a.button{:href => "#{edit_user_registration_path}"} Edit account
        - if current_user.has_role? :admin
          %li
            %a.button{:href => "#{users_path}"} Admin
      - else
        %li
          %a.button{:href => "#{new_user_registration_path}"} Sign up
      - if user_signed_in?
        %li
          %a.button{:href => "#{destroy_user_session_path}", :data => {:method => 'delete'}} Logout
      - else
        %li
          %a.button{:href => "#{new_user_session_path}"} Login
/ End Header and Nav